<% content_for :title, "Lista de Jogos" %>

<section class="text-center py-10 bg-gray-50">
  <h1 class="text-4xl font-extrabold text-gray-800 mb-2">Jogos Disponíveis</h1>
  <p class="text-lg text-gray-600">Confira os jogos disponíveis para inscrição.</p>
</section>

<section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
    <% @games.each do |game| %>
      <div class="bg-white rounded-2xl shadow-md overflow-hidden transition hover:shadow-xl">
        <% if game.cover_image.attached? %>
          <%= image_tag game.cover_image, class: "w-full h-48 object-cover" %>
        <% else %>
          <div class="w-full h-48 bg-gray-200 flex items-center justify-center text-gray-500 text-sm">
            Imagem indisponível
          </div>
        <% end %>

        <div class="p-6">
          <h2 class="text-xl font-bold text-gray-800 mb-2"><%= game.title %></h2>
          <p class="text-gray-600 text-sm mb-2">
            <strong class="text-gray-800">Local:</strong>
            <%= game.local %>
          </p>
          <p class="text-gray-600 text-sm mb-2">
            <strong class="text-gray-800">Data:</strong>
            <%= game.data.strftime("%d/%m/%Y") %>
          </p>
          <p class="text-gray-600 text-sm mb-4"><%= truncate(game.description, length: 100) %></p>

          <%= link_to "Participar", public_games_path(game),
                      class: "inline-block text-sm text-white bg-[#6b8e23] hover:bg-[#5a7b1d] px-4 py-2 rounded-lg transition" %>
        </div>
      </div>
    <% end %>
  </div>

  <% if @games.empty? %>
    <p class="text-center text-gray-500 mt-10">Nenhum jogo disponível no momento.</p>
  <% end %>
</section>
